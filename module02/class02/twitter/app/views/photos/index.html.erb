<h1><%= @title %> <%= params[:year] %></h1>

<%= form_tag search_photos_path do %>
  <%= text_field_tag "terms" %>
  <%= submit_tag "Buscar" %>
<% end %>

<form action="<%= search_photos_path %>" method="post">
  <input type="text" name="terms" /> 
  <button>Buscar</button>
</form>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.created_at %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to "Google", "http://google.com/search?q=#{photo.title}" %>
        <td><%= link_to 'Editar', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
